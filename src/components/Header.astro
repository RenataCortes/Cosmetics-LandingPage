---
// Header component with navigation and cart

---

<header class="fixed top-0 left-0 w-full z-50 backdrop-blur-xl bg-gradient-to-b from-[#8E6C4D]/80 to-[#E2C0A4]/20 text-[#F2F0DE] px-6 py-4">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href="/#top" class="text-2xl font-semibold italic">
      <span class="font-serif">COS</span><span class="font-serif">metics</span>
    </a>

    <!-- Navegación -->
    <nav class="hidden md:flex items-center gap-8">
      <a href="/#products" class="text-xs tracking-wide hover:text-white transition-colors">PRODUCTOS</a>
      <a href="/#your-story" class="text-xs tracking-wide hover:text-white transition-colors">TU HISTORIA</a>
      <a href="/#contact" class="text-xs tracking-wide hover:text-white transition-colors">CONTÁCTANOS</a>

      <div class="flex items-center gap-3 ml-4">
        <!-- Botón de búsqueda -->
        <button class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/50 transition-colors">
          <svg class="w-4 h-4 text-[#F2F0DE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>

        <!-- Botón del carrito -->
        <button class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/50 transition-colors">
          <svg class="w-4 h-4 text-[#F2F0DE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile menu button -->
    <button class="md:hidden w-8 h-8 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/50 transition-colors">
      <svg class="w-5 h-5 text-[#F2F0DE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</header>
